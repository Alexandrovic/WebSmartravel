{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Voyage list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Moyentransport</th>
                <th>Destination</th>
                <th>Budget</th>
                <th>Nbplace</th>
                <th>Programme</th>
                <th>Itineraire</th>
                <th>Datedepart</th>
                <th>Dateretour</th>
                <th>Type</th>
                <th>Typesortie</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('travel_voyage_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.moyenTransport }}</td>
                <td>{{ entity.destination }}</td>
                <td>{{ entity.budget }}</td>
                <td>{{ entity.nbPlace }}</td>
                <td>{{ entity.programme }}</td>
                <td>{{ entity.itineraire }}</td>
                <td>{% if entity.dateDepart %}{{ entity.dateDepart|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateRetour %}{{ entity.dateRetour|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.typesortie }}</td>
                <td>{{ entity.image }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('travel_voyage_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('travel_voyage_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('travel_voyage_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
