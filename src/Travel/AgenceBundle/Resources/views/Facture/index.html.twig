{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Facture list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sommefacture</th>
                <th>Datepayementfacture</th>
                <th>Reservation</th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('travel_facture_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.sommeFacture }}</td>
                <td>{% if entity.datePayementFacture %}{{ entity.datePayementFacture|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('travel_facture_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('travel_facture_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('travel_facture_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
