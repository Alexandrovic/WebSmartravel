{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Hotel list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomhotel</th>
                <th>Ville</th>
                <th>Nbreetoile</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('travel_hotel_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nomHotel }}</td>
                <td>{{ entity.ville }}</td>
                <td>{{ entity.nbreEtoile }}</td>
                <td>{{ entity.image }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('travel_hotel_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('travel_hotel_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('travel_hotel_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
